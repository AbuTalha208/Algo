#include <stdio.h>

int main(){

    int BT[30]={24,3,3};


    int a;
    printf("Enter the number of processes:");
    scanf("%d",&a);
    int WT[30];
    WT[0]=0;
    int TAT[30],TTAT=0,TWT=0,p[30],temp=0;

     for (int i = 0; i < a - 1; i++) {
        for (int j = i + 1; j < a; j++) {
            if (BT[j] < BT[i]) {

                temp = BT[i];
                BT[i] = BT[j];
                BT[j] = temp;


                temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }

    }
    for(int i = 1; i<a; i++){
        WT[i] = WT[i-1]+BT[i-1];
        p[i];
        }

    for(int i = 0; i<a; i++){
        TAT[i] = WT[i]+BT[i];
        TTAT = TTAT+TAT[i];
        TWT = TWT+WT[i];
    }
    printf("\nProcess\tBurst_time\tWait_time\tTA_time\n");
    for(int i = 0; i<a; i++){
        printf("P%d\t\t%d\t\t\t%d\t\t\t%d\n",i+1,BT[i],WT[i],TAT[i]);
    }
    printf("Average TAT:%.2f\n",(float)TTAT/a);
    printf("Average WT:%.2f",(float)TWT/a);

}

